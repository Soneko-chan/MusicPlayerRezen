<Page x:Class="UI.PlaylistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:helpers="clr-namespace:UI.Helpers"
      Title="PlaylistsPage">
    <Page.Resources>
        <helpers:PlaylistCoverConverter x:Key="PlaylistCoverConverter"/>
    </Page.Resources>
    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка создания -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryColorBrush}" 
                Margin="20,10,20,15" CornerRadius="8" Padding="20,15" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Мои плейлисты" 
                           FontSize="24" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextColorBrush}"/>

                <Button Grid.Column="1" Name="CreatePlaylistButton" 
                        Content="Создать плейлист +" 
                        Style="{DynamicResource StandardButtonStyle}"
                        Padding="15,8" Click="CreatePlaylistButton_Click"/>
            </Grid>
        </Border>

        <!-- Сетка плейлистов -->
        <ScrollViewer Grid.Row="1" Margin="15,0">
            <ItemsControl Name="PlaylistsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   ItemWidth="200" ItemHeight="250"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource PlaylistCardStyle}" 
                                MouseLeftButtonUp="PlaylistItem_Click">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Обложка плейлиста -->
                                <Border Grid.Row="0" Background="{DynamicResource PrimaryColorBrush}"
                                        CornerRadius="8" Height="125" Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        ClipToBounds="True">
                                    <Image Source="{Binding PlaylistCoverPath, Converter={StaticResource PlaylistCoverConverter}}"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о плейлисте -->
                                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding PlaylistName}"
                                               FontWeight="SemiBold"
                                               FontSize="16" TextWrapping="Wrap"
                                               Foreground="{DynamicResource TextColorBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding PlaylistTracks.Count,
                                               StringFormat={}{0} треков}"
                                               FontSize="12"
                                               Foreground="{DynamicResource LightTextColor}"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding DateCreated,
                                               StringFormat=Создан: {0:dd.MM.yyyy}}"
                                               FontSize="10"
                                               Foreground="{DynamicResource LightTextColor}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
