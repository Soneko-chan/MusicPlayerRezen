<Page x:Class="UI.SubscriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SubscriptionPage">
    <Grid Background="{DynamicResource BackgroundColor}">
        <ScrollViewer>
            <StackPanel Margin="20">

                <TextBlock Text="Подписка"
                           FontSize="28" FontWeight="Bold"
                           Foreground="{DynamicResource TextColorBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <!-- Текущий статус подписки -->
                <Border Background="{DynamicResource SecondaryColorBrush}"
                        Margin="0,0,0,30" Padding="20" CornerRadius="8"
                        HorizontalAlignment="Center" Width="400">
                    <StackPanel>
                        <TextBlock x:Name="SubscriptionStatusText"
                                   Text="Статус подписки: Активна до 01.01.2025"
                                   FontSize="16" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextColorBrush}"/>
                        <TextBlock x:Name="DaysLeftText"
                                   Text="Осталось 90 дней"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource LightTextColor}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                
                

                <!-- Форма оплаты -->
                <Border Background="{DynamicResource SecondaryColorBrush}"
                        Margin="0,0,0,30" Padding="30" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Информация об оплате"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColorBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Номер карты"
                                           Foreground="{DynamicResource TextColorBrush}"
                                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <TextBox Name="CardNumberTextBox"
                                         Style="{StaticResource StandardTextBoxStyle}"
                                         MaxLength="16"
                                         Padding="10,8"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Срок действия (MM/YY)"
                                           Foreground="{DynamicResource TextColorBrush}"
                                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <TextBox Name="ExpiryTextBox"
                                         Style="{StaticResource StandardTextBoxStyle}"
                                         MaxLength="5"
                                         Padding="10,8"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="CVV" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextColorBrush}"
                                       Margin="0,0,0,5" FontWeight="SemiBold" Height="17" Width="94"/>
                            <TextBox Name="CvvTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     MaxLength="4"
                                     Padding="10,8" Width="100"/>
                        </StackPanel>

                        <Button Content="Оплатить подписку"
                                Name="PayButton"
                                Style="{DynamicResource StandardButtonStyle}"
                                HorizontalAlignment="Center"
                                Padding="30,15" FontSize="16"
                                Click="PayButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
