<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Цвета для светлой темы -->
    <Color x:Key="LightThemeBackgroundColor">#F5F7FA</Color>
    <Color x:Key="LightThemePrimaryColor">#4361EE</Color>
    <Color x:Key="LightThemePrimaryDarkColor">#3A56D4</Color>
    <Color x:Key="LightThemeSecondaryColor">#EEEEEE</Color>
    <Color x:Key="LightThemeSecondaryDarkColor">#DDDDDD</Color>
    <Color x:Key="LightThemeTextColor">#000000</Color>
    <Color x:Key="LightThemeLightTextColor">#707070</Color>
    <Color x:Key="LightThemeControlBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightThemeControlBorderColor">#CCCCCC</Color>
    <Color x:Key="LightThemeAccentColor">#F72585</Color>
    <Color x:Key="LightThemeSuccessColor">#4CC9F0</Color>
    <Color x:Key="LightThemeWarningColor">#F8961E</Color>
    <Color x:Key="LightThemeDangerColor">#F15B46</Color>
    <Color x:Key="LightThemeShadowColor">Black</Color>

    <!-- Цвета для темной темы -->
    <Color x:Key="DarkThemeBackgroundColor">#121212</Color>
    <Color x:Key="DarkThemePrimaryColor">#620371</Color>
    <Color x:Key="DarkThemePrimaryDarkColor">#770589</Color>
    <Color x:Key="DarkThemeSecondaryColor">#2A2A2A</Color>
    <Color x:Key="DarkThemeSecondaryDarkColor">#3A3A3A</Color>
    <Color x:Key="DarkThemeTextColor">#FFFFFF</Color>
    <Color x:Key="DarkThemeLightTextColor">#CCCCCC</Color>
    <Color x:Key="DarkThemeControlBackgroundColor">#1E1E1E</Color>
    <Color x:Key="DarkThemeControlBorderColor">#404040</Color>
    <Color x:Key="DarkThemeAccentColor">#F72585</Color>
    <Color x:Key="DarkThemeSuccessColor">#4CC9F0</Color>
    <Color x:Key="DarkThemeWarningColor">#F8961E</Color>
    <Color x:Key="DarkThemeDangerColor">#F15B46</Color>
    <Color x:Key="DarkThemeShadowColor">White</Color>
</ResourceDictionary>