<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета для темной темы -->
    <Color x:Key="CurrentBackgroundColor">#121212</Color>
    <Color x:Key="CurrentPrimaryColor">#620371</Color>
    <Color x:Key="CurrentPrimaryDarkColor">#770589</Color>
    <Color x:Key="CurrentSecondaryColor">#2A2A2A</Color>
    <Color x:Key="CurrentSecondaryDarkColor">#3A3A3A</Color>
    <Color x:Key="CurrentTextColor">#FFFFFF</Color>
    <Color x:Key="CurrentLightTextColor">#CCCCCC</Color>
    <Color x:Key="CurrentControlBackgroundColor">#1E1E1E</Color>
    <Color x:Key="CurrentControlBorderColor">#404040</Color>
    <Color x:Key="CurrentAccentColor">#F72585</Color>
    <Color x:Key="CurrentSuccessColor">#4CC9F0</Color>
    <Color x:Key="CurrentWarningColor">#F8961E</Color>
    <Color x:Key="CurrentDangerColor">#F15B46</Color>
    <Color x:Key="CurrentShadowColor">White</Color>

    <!-- Кисти для темной темы -->
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource CurrentBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource CurrentPrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryBrushDark" Color="{StaticResource CurrentPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource CurrentSecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrushDark" Color="{StaticResource CurrentSecondaryDarkColor}"/>
    <SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource CurrentTextColor}"/>
    <SolidColorBrush x:Key="LightTextColorBrush" Color="{StaticResource CurrentLightTextColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundColorBrush" Color="{StaticResource CurrentControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBorderColorBrush" Color="{StaticResource CurrentControlBorderColor}"/>
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource CurrentAccentColor}"/>
    <SolidColorBrush x:Key="SuccessColorBrush" Color="{StaticResource CurrentSuccessColor}"/>
    <SolidColorBrush x:Key="WarningColorBrush" Color="{StaticResource CurrentWarningColor}"/>
    <SolidColorBrush x:Key="DangerColorBrush" Color="{StaticResource CurrentDangerColor}"/>
    <SolidColorBrush x:Key="ShadowColorBrush" Color="{StaticResource CurrentShadowColor}"/>

    <!-- Алиасы для совместимости с существующим кодом -->
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource CurrentBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource CurrentPrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDark" Color="{StaticResource CurrentPrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="{StaticResource CurrentSecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryDark" Color="{StaticResource CurrentSecondaryDarkColor}"/>
    <SolidColorBrush x:Key="TextColor" Color="{StaticResource CurrentTextColor}"/>
    <SolidColorBrush x:Key="LightTextColor" Color="{StaticResource CurrentLightTextColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundColor" Color="{StaticResource CurrentControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBorderColor" Color="{StaticResource CurrentControlBorderColor}"/>
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource CurrentAccentColor}"/>
    <SolidColorBrush x:Key="SuccessColor" Color="{StaticResource CurrentSuccessColor}"/>
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource CurrentWarningColor}"/>
    <SolidColorBrush x:Key="DangerColor" Color="{StaticResource CurrentDangerColor}"/>

    <!-- Стиль для кнопки -->
    <Style x:Key="StandardButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            BorderThickness="0"
                            Effect="{x:Null}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrushDark}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.3" BlurRadius="8" ShadowDepth="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#304ACE"/>
                            <Setter Property="Effect" Value="{x:Null}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource SecondaryColorBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource LightTextColorBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для альтернативной кнопки -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource StandardButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SecondaryColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SecondaryBrushDark}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для TextBox -->
    <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBoxBase">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryColorBrush}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.2" BlurRadius="4" ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrushDark}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.3" BlurRadius="6" ShadowDepth="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для PasswordBox -->
    <Style x:Key="StandardPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryColorBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrushDark}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для ListBox -->
    <Style x:Key="StandardListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColorBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="2">
                        <ScrollViewer Focusable="False" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" TargetName="Bd" Value="#FFF4F4F4"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsGrouping" Value="True"/>
                                <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для ListBoxItem -->
    <Style x:Key="StandardListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="5"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource SecondaryColorBrush}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                <Condition Property="IsSelected" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource SecondaryColorBrush}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                <Condition Property="IsSelected" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource PrimaryColorBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для элемента списка с обложкой -->
    <Style x:Key="TrackItemStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.05" BlurRadius="6" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SecondaryColorBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColorBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для карточки плейлиста -->
    <Style x:Key="PlaylistCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundColorBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SecondaryColorBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource CurrentShadowColor}" Opacity="0.15" BlurRadius="12" ShadowDepth="4"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для опасной кнопки -->
    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource StandardButtonStyle}">
        <Setter Property="Background" Value="{StaticResource DangerColorBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#C24141"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#B91C1C"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>